{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@apps/*": ["./apps/*"]
    }
  },
  "include": ["apps/**/*", "shared/**/*"]
}
